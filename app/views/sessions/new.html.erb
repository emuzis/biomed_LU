<div id="login_form">
  <%= render_flash_messages %>
  <%= form_tag("/login") do %>
    <p>
      <%= label_tag "user[login]", "Lietotājvārds:" %>
      <%= text_field_tag "user[login]", nil, :class => "input_text" %>
    </p>
    <br class="clear"/>
    <p>
      <%= label_tag "user[password]", "Parole:" %>
      <%= password_field_tag "user[password]", nil, :class => "input_text" %>
    </p>
    <br class="clear"/>
    <div class="submit_button">
      <%= submit_tag "Ienākt", :class => "button" %>
    </div>
    <br class="clear"/>
  <% end %>
</div>